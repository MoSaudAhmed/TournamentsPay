<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_messageRow_profilePic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_person" />

            <TextView
                android:id="@+id/tv_messageRow_name"
                style="@style/text12Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Mohammed Saud Ahmed"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_messageRow_time"
                style="@style/text12Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5th may 6PM"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_messageRow_message"
            style="@style/text12Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="Mohammed Saud Ahmed"
            android:textSize="14dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>