<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lytBlue"
    tools:context=".fragments.FragmentHome">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/HomeSwipeToRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/lay_Announcements"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_home_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".ui.screens.intro.IntroViewPagerFragment" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/pager_tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        app:tabBackground="@drawable/tab_pager_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabMaxWidth="10dp"
                        app:tabPadding="10dp" />
                </FrameLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_homeRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <include layout="@layout/nodata_layout" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>